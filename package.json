{
  "name": "angular-offline-first-graphql",
  "version": "0.0.1",
  "description": "an experiment to try to bring offline-first capability to an angular apollo graphql application.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "server-dev": "cd server && node_modules/.bin/nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'node_modules/.bin/ts-node' src/server.ts",
    "server-build": "cd server && tsc",
    "server-prod": "node server/dist/server.js",
    "client-dev": "cd client && ng serve",
    "client-build": "cd client && ng build --prod --aot",
    "dev": "npm-run-all --parallel server-dev client-dev",
    "build": "npm-run-all --parallel client-build server-build",
    "prod": "npm run server-prod"
  },
  "keywords": [
    "angular",
    "ngrx",
    "apollo",
    "offline-first",
    "graphql",
    "typeorm",
    "service-worker",
    "postgres",
    "postgresql",
    "couchdb",
    "pouchdb",
    "pubsub"
  ],
  "author": "Ben Kinsey",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^1.2.0",
    "npm-run-all": "^4.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
