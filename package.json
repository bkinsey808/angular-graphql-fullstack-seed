{
  "name": "angular-offline-first-graphql",
  "version": "0.0.1",
  "description": "an experiment to try to bring offline-first capability to an angular apollo graphql application.",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "server-dev": "cd server && node_modules/.bin/nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'node_modules/.bin/ts-node' src/server.ts",
    "server-build-prod": "cd server && tsc",
    "server-run-prod": "cd server && node dist/server.js"
  },
  "keywords": [
    "angular",
    "ngrx",
    "apollo",
    "offline-first",
    "graphql",
    "typeorm",
    "service-worker",
    "postgres",
    "postgresql",
    "couchdb",
    "pouchdb",
    "pubsub"
  ],
  "author": "Ben Kinsey",
  "license": "ISC",
  "devDependencies": {
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
